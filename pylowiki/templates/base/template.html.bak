<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>${c.title}</title>
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/global.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/topbar.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/foldertabs.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/footer.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/page.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/flash.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/grid.css')}" />
    <link type="text/css" rel="stylesheet" href = "${h.url_for('/styles/pop.css')}" />
    
    ${self.extraStyles()}
    
    <script src = "${h.url_for('/js/jquery-1.6.2.min.js')}" type="text/javascript"></script>
    <script src = "${h.url_for('/js/fldtabs.js')}" type="text/javascript"></script>
    <script src = "${h.url_for('/js/dim.js')}" type="text/javascript"></script>
    <script src = "${h.url_for('/js/renown.js')}" type="text/javascript"></script>
    
    ${self.extraScripts()}
    
</head>

<body>

    ## Flasher
    <div id = "content" class = "grid_16">
        ${self.flasher()}
    </div>

<div id="container">
    <div id="topbar" class="clr">
        <a href = "${h.url_for('/')}">
        <img src = "${h.url_for('/images/logo.png')}" class="left" alt="greenocracy logo" />
        </a>
        <div id="nav" class="left">
            <form class="left" action="issuehome.html" method="get">
                <input type="text" title="Search" />
                <button type="submit" title="Search">Search</button>
            </form>
            <ul id="navtab" class="left">
                <a href = "${h.url_for('#')}"><li title="Home">Home</li></a>
                % if 'user' in session:
                    <a href = "/profile/${c.authuser.name}"><li title="Profile">Profile</li></a>
                    <a href = "${h.url_for('#')}"><li title="Inbox">Inbox</li></a>
                    <a href = "${h.url_for('#')}"><li title="Settings">Settings</li></a>
                    <a href = "/login/logout"><li title="Logout">Logout</li></a>
                % endif
            </ul><!-- navtab -->
        </div><!-- nav -->
    </div><!-- topbar -->
    
	% if 'user' in session:
	<div id="renown">
		<ul class="right">
			<li class="left">
				<p class="point gray left">+2</p>
				<span>You casted a vote</span>
				<br />
				<span class="time">4 minutes ago</span>
			</li>
		</ul>
		<p class="right"><a href = "${h.url_for('#')}"><span class="gray">${c.authuser.pointsObj.points}</span></a></p>
	</div><!-- renown -->
    % endif
    
    <ul id="fldtabs" class="left clr">
        <li><a href = "${h.url_for('/issues')}">Issues</a></li>
        <li><a href = "${h.url_for('/solutions')}">Solutions</a></li>
        <li><a href = "${h.url_for('#')}">Community</a></li>
        <li><a href = "${h.url_for('#')}">Government Bodies</a></li>
        <li><a href = "${h.url_for('#')}">Groups</a></li>
    </ul><!-- fldtabs -->
    
    <div id="main" class="clr">
        <div class="left">
        	${next.body()}
        </div>
    </div><!-- main -->
    
    ${self.extraHTML()}
    
    <div id="footer">
       <a href = "${h.url_for('/issue/index')}">Issues</a> | <a href = "${h.url_for('/solutions/index')}">Solutions</a> | <a href = "${h.url_for('#')}">Profile</a> | <a href = "${h.url_for('#')}">Gov Bodies</a> | <a href = "${h.url_for('#')}">Groups</a>
        <br />
        <span><a href = "${h.url_for('#')}">About us</a> | <a href = "${h.url_for('#')}">Support the Community</a> | <a href = "${h.url_for('#')}">Contact</a> | <a href = "${h.url_for('#')}">Terms of Use</a> | <a href = "${h.url_for('#')}">Privacy</a></span>
    </div><!-- footer -->
</div><!-- container -->
</body>

</html>

<%def name="flasher()">
    <% messages = h.flash.pop_messages() %>
    % if messages:
        % for m in messages:
            <p id = "flash" class = "${m.category}" title = "Dismiss this message.">
                    ${m}
            </p>
            <script>
                $("p#flash").fadeIn(800).delay(6000).fadeOut(800);
                $("p#flash").click(function() {
                    $(this).clearQueue();
                    $(this).fadeOut(800);
                });
            </script>
        % endfor
    % endif
</%def>
