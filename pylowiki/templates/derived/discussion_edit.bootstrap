<%inherit file="/base/template.bootstrap"/>

<%namespace name="lib" file="/lib/mako_lib.mako" />
<%namespace name="helpers" file="/lib/discussion_helpers/Add_Edit.mako" />

<div class="container-fluid">
    <div class="well">
        <h1><a href="/workshop/${c.w['urlCode']}/${c.w['url']}">${c.w['title']}</a></h1>
        <br />
        ${lib.nav_thing("discussion")}
        <br />
    </div><!-- well -->
    <div class="row-fluid">    
        <div class="span8">
            ${lib.fields_alert()}
            <div class="civ-col">
                % if c.discussion:
                    ${helpers.edit()}
                % else:
                    ${helpers.add()}
                % endif
                </br>
            </div> <!-- civ-col -->
        </div><!-- span8 -->
        <div class="span4">
            <h2 class="civ-col">Other Discussion Topics</h2>
        </div><!-- span4 -->

    </div><!-- row-fluid -->
</div> <!-- container-fluid -->

<%def name = 'extraStyles()'>

</%def>

<%def name = 'extraHTML()'>

</%def>

<%def name = 'extraScripts()'>

</%def>
